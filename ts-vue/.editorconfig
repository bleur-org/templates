root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx,vue,js,jsx}]
indent_size = 2
quote_type = single

[*.{json,jsonc,toml}]
indent_size = 2

[*.{yml,yaml}]
# YAML is strictly 2 spaces
indent_size = 2

[*.md]
# Markdown line breaks require trailing spaces
trim_trailing_whitespace = false
indent_size = 2
